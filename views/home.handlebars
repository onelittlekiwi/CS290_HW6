<script src="./public/script.js"></script>

<h1>Workouts Table</h1>

<h2>Add an exercise:</h2>
<form id="newExercise">
    <label>Name: </label>
    <input type="text" name="name" id="exerciseName">
    <label>Reps: </label>
    <input type="number" name="reps" id="reps">
    <label>Weight: </label>
    <input type="number" name="weight" id="weight">
    <label>Date: </label>
    <input type="date" name="date" id="date">
    <label>Unit: </label>
    <label>lbs </label><input type="radio" name="unit" id="lbs" value="lbs">
    <label>kg </label><input type="radio" name="unit" id="kg" value="kg">
    <button onclick="addExercise(event)">Add Exercise</button>
</form><br>

<table id="displayTable">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    {{#if results}}
        {{#each results}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.date}}</td>
            <td>{{this.unit}}</td>
            <td><a href="/edit?id={{this.id}}"><input type="button" value="Edit"></a></td>
            <td>
                <input type="hidden" id="{{this.id}}">
                <input type="button" name="Delete" value="Delete" onclick="deleteExercise({{this.id}})">
            </td>
        </tr>
        {{/each}}
    {{/if}}
</table>